{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "bin",

    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  }
}